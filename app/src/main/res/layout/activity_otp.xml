<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cpb_white"
    android:padding="@dimen/right_margin"
    tools:context=".onboarding.validation.Otp_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/AppImage"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="76dp"
            android:src="@drawable/ic_logo_master" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/setpoppinssemibold"
            android:text="GREAT!"
            android:textColor="@color/textcolorgreen"
            android:textSize="@dimen/toolbarIconSize"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/material_size_24"
            android:fontFamily="@font/setpoppins_medium"
            android:text="@string/hint_we_sent_the_otp"
            android:textColor="@color/dark_grey"
            android:textSize="23sp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/layoutPadding"
                android:layout_marginBottom="18dp"
                android:background="@color/transparent"
                android:fontFamily="@font/setpoppins_medium"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:text="+91 9999999999"
                android:textColor="@color/light_black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="visible"

                />

            <ImageView
                android:id="@+id/btneditMobileNo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="18sp"
                android:layout_toEndOf="@id/phone_number"
                android:foreground="?attr/selectableItemBackground"
                android:padding="5dp"
                android:src="@drawable/edit" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ilOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btneditMobileNo"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/marginTop"
            android:layout_marginTop="@dimen/right_margin"
            android:layout_marginEnd="@dimen/marginTop"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etOTP1"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:digits="0123456789"
                android:fontFamily="@font/setpoppinssemibold"
                android:gravity="center"
                android:hint="0"
                android:inputType="number|phone"
                android:lines="1"
                android:maxLength="1"
                android:maxLines="1"
                android:padding="@dimen/cardMargin"
                android:singleLine="true"
                android:textSize="@dimen/largeTextSize" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etOTP2"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:digits="0123456789"
                android:fontFamily="@font/setpoppinssemibold"
                android:gravity="center"
                android:hint="0"
                android:inputType="number|phone"
                android:lines="1"
                android:maxLength="1"
                android:maxLines="1"
                android:padding="@dimen/cardMargin"
                android:singleLine="true"
                android:textSize="@dimen/largeTextSize" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etOTP3"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:digits="0123456789"
                android:fontFamily="@font/setpoppinssemibold"
                android:gravity="center"
                android:hint="0"
                android:inputType="number|phone"
                android:lines="1"
                android:maxLength="1"
                android:maxLines="1"
                android:padding="@dimen/cardMargin"
                android:singleLine="true"
                android:textSize="@dimen/largeTextSize" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etOTP4"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:digits="0123456789"
                android:fontFamily="@font/setpoppinssemibold"
                android:gravity="center"
                android:hint="0"
                android:inputType="number|phone"
                android:lines="1"
                android:maxLength="1"
                android:maxLines="1"
                android:padding="@dimen/cardMargin"
                android:singleLine="true"
                android:textSize="@dimen/largeTextSize" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lblOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/cardMargin"
            android:fontFamily="@font/setpoppins"
            android:text="Didn't receive the code?"
            android:textColor="@color/cpb_grey"
            android:textSize="@dimen/mediumTextSize" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/resend_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackground"
            android:fontFamily="@font/setpoppinssemibold"
            android:text="@string/btn_resend"
            android:textAllCaps="true"
            android:textColor="@color/gradient_start"
            android:textSize="@dimen/mediumTextSize" />

        <RelativeLayout
            android:id="@+id/next_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:animateLayoutChanges="true"
            android:background="@drawable/roundedsquare"
            android:elevation="12dp"
            android:orientation="vertical"
            tools:targetApi="p">

            <TextView
                android:id="@+id/ButtonGoID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/setpoppinssemibold"
                android:gravity="center"
                android:paddingHorizontal="12sp"
                android:paddingVertical="10sp"
                android:text="@string/sign_in"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="5dp"
                android:indeterminateTint="@color/white"
                android:visibility="visible" />


        </RelativeLayout>



    </LinearLayout>


</RelativeLayout>
