<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/back_white_border_grey"
    android:orientation="vertical"
    android:padding="10dp"
    tools:ignore="MissingPrefix">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:src="@drawable/ic_cancel" />

        <TextView
            fontPath="font/poppins_medium.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Cancel Appointment!"
            android:textColor="@color/textdarkgreen"
            android:textSize="18sp" />

        <TextView
            fontPath="font/poppins_medium.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="You are about to cancel your appointment"
            android:textColor="@color/dark_grey1"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/background" />

        <TextView
            android:id="@+id/tvordernumber"
            fontPath="font/poppins_medium.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Alternatively, you can reschedule your\n appointment"
            android:textColor="@color/textcolorblue"
            android:textSize="13sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btnreschedule"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            app:cardCornerRadius="@dimen/material_size_24"
            app:cardBackgroundColor="@color/greenlightbg2"
            android:gravity="center"
            android:paddingTop="2dp"
            android:textAllCaps="false"
           >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_centerInParent="true"
                    android:text="Yes, I want to Reschedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvcancel"
            fontPath="font/poppins_medium.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="No Thanks. I wish to cancel"
            android:textColor="@color/textdarkgreen"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>