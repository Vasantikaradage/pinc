<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MB360" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gradient_start</item>
        <item name="colorPrimaryVariant">@color/gradient_start</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gradient_start</item>
        <item name="colorSecondaryVariant">@color/gradient_start</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
        <item name="homeAsUpIndicator">@drawable/back</item>

    </style>

    <style name="BottomNavigationViewTextStyle" parent="Theme.MaterialComponents">
        <item name="android:fontFamily">@font/setpoppins</item>
        <item name="android:textColor">@color/gradient_start</item>
    </style>

    <style name="BottomNavigationViewTextStyleInactive" parent="Theme.MaterialComponents">
        <item name="android:fontFamily">@font/setpoppins</item>
        <item name="android:textColor">@color/grey1</item>
    </style>

    <style name="Theme.MB360.error" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>


    <style name="Theme.MB360.wellness" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/greenlightbg2</item>
        <item name="colorPrimaryVariant">@color/greenlightbg2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/greenlightbg2</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--For splash screen!-->
    <style name="Theme.MB360.Starting" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.MB360</item>
    </style>

    <!-- for the rounded spinner with dialogue! -->
    <style name="SpinnerTheme2">
        <item name="android:background">@drawable/spinnerbackground</item>
        <item name="android:popupBackground">@drawable/nhborder</item>
        <item name="android:fontFamily">@font/setpoppins</item>
    </style>

    <style name="PolicySpinner">
        <item name="android:popupBackground">@drawable/nhborder</item>
        <item name="android:fontFamily">@font/setpoppins</item>
    </style>

    <style name="SpinnerTheme3">
        <item name="android:background">@drawable/queryborder</item>
        <item name="android:popupBackground">@drawable/nhborder</item>
        <item name="android:fontFamily">@font/setpoppins</item>
    </style>

    <style name="App_font">
        <item name="android:fontFamily">@font/setpoppinssemibold</item>
    </style>

    <style name="App_font_toolBar">
        <item name="fontFamily">@font/setpoppinssemibold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="tabTextAppearance" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="hintTextColor">@color/cpb_black</item>
        <item name="background">@color/white</item>
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="counterTextAppearance">@style/App_font</item>
        <item name="android:fontFamily">@font/setpoppins</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
    </style>


    <style name="address_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="WellnessTextViewAppearance" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/cpb_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/setpoppins</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="EnrollmentTextViewAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="EnrollTitle" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/montserratbold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/xlargeTextSize</item>
        <item name="android:textColor">@color/white</item>

    </style>


    <style name="Enroll_Button_theme" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/setpoppins</item>
        <item name="android:textColor">@color/gradient</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="shapeAppearance">@style/CardShape</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="rippleColor">@color/cpb_grey</item>
    </style>

    <style name="EnrollSummary">
        <item name="fontFamily">@font/montserratbold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CardShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
    </style>

    <style name="RupeeStyle">
        <item name="fontFamily">@font/montserratbold</item>
    </style>

    <style name="seperator">
        <item name="android:background">#dddddd</item>
    </style>

    <style name="HintApperance">
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:textColor">@color/hint_grey</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="Enroll_Button_theme2" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">#0000</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">3dp</item>
        <item name="shapeAppearance">@style/CardShape</item>
    </style>

    <style name="HintApperanceone">
        <item name="fontFamily">@font/montserratbold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/cpb_black</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
    </style>

    <style name="TextInputAppearance" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/largeTextSize</item>
        <item name="hintTextColor">@color/cpb_black</item>
        <item name="background">@color/white</item>
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>


    <style name="MySwitch">
        <item name="colorControlActivated">@color/gradient_start</item>
    </style>

    <style name="DepedantSpinnerTheme">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="Cancel_Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="shapeAppearance">@style/CardShape</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/red</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="rippleColor">@color/cpb_grey</item>
    </style>

    <style name="TextViewAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textCursorDrawable">@color/white</item>
        <item name="android:backgroundTint">@color/hint_grey</item>
    </style>

    <style name="TextViewAppearance1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textCursorDrawable">@color/white</item>
        <item name="android:backgroundTint">@color/hint_grey</item>
    </style>

    <style name="DialogAnimation" parent="Theme.MaterialComponents.Dialog">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
        <item name="shapeAppearance">@style/CardShape</item>
    </style>

    <style name="MyRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/colorRadio</item>
        <item name="colorSurface">@color/white</item>
    </style>

    <style name="summary_amount" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserratbold</item>
    </style>


    <style name="Enroll_Button_theme3" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">#0000</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">#a4f700</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="shapeAppearance">@style/ConfirmShape</item>
    </style>

    <style name="ConfirmShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="summary_button" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/cpb_black</item>
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserratbold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TitleTextViewAppearance" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@drawable/edittext_selector</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

</resources>