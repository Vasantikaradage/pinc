<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/profile_item_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp">

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginVertical="@dimen/material_size_6"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_my_coverage"
             />

        <TextView
            android:id="@+id/profile_service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/profile_icon"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/profile_icon"
            android:fontFamily="@font/setpoppinssemibold"
            android:text="@string/my_coverages"
            android:textSize="15sp" />

    </RelativeLayout>

    <View
        android:layout_below="@id/profile_item_main_layout"
        android:background="@color/background1"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/material_size_6"
        android:layout_height="0.6dp"/>

</RelativeLayout>