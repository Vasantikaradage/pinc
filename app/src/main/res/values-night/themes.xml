<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MB360" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gradient_start</item>
        <item name="colorPrimaryVariant">@color/gradient_start</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNavigationViewTextStyle" parent="Theme.MaterialComponents">
        <item name="android:fontFamily">@font/setpoppins</item>
        <item name="android:textColor">@color/gradient_start</item>
    </style>
    <style name="BottomNavigationViewTextStyleInactive" parent="Theme.MaterialComponents">
        <item name="android:fontFamily">@font/setpoppins</item>
        <item name="android:textColor">@color/grey1</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="summary_amount" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserratbold</item>
    </style>


    <!--For splash screen!-->
    <style name="Theme.MB360.Starting" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.MB360</item>
    </style>

    <style name="App_font_toolBar">
        <item name="fontFamily">@font/setpoppinssemibold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Enroll_Button_theme3" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">#0000</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">#a4f700</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="shapeAppearance">@style/ConfirmShape</item>
    </style>

    <style name="ConfirmShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="summary_button" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/cpb_black</item>
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserratbold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TitleTextViewAppearance" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@drawable/edittext_selector</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>
</resources>