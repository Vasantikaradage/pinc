<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlservice"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="5dp"
    android:background="@drawable/card_shadow"
    android:foreground="?attr/selectableItemBackground"
    tools:ignore="MissingPrefix">

    <ImageView
        android:id="@+id/iv_service_icon"
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_health_check" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/cardMargin"
        android:layout_toRightOf="@+id/iv_service_icon"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingRight="3dp">

        <TextView
            android:id="@+id/tv_service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/tv_service_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/poppins_regular"
            android:text=""
            android:textColor="@color/grey2"
            android:textSize="11sp" />

    </LinearLayout>

</RelativeLayout>